# Personal Assistant Backend Configuration

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/personal_assistant

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# OpenAI API
OPENAI_API_KEY=your-openai-api-key-here

# Google Calendar Integration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Service account-based Google Calendar (used by backend)
# Path to the JSON key file (absolute or inside container, e.g. /app/core-dominion-477510-i7-3f438f4fca77.json)
GOOGLE_SERVICE_ACCOUNT_FILE=/path/to/core-dominion-477510-i7-3f438f4fca77.json
# Calendar ID to read from (e.g. primary or a specific calendar ID)
GOOGLE_CALENDAR_ID=primary

# Redis (for caching and task queue)
REDIS_URL=redis://localhost:6379

# Email Configuration
EMAIL_PROVIDER=gmail  # gmail or outlook
GMAIL_CLIENT_ID=your-gmail-client-id
GMAIL_CLIENT_SECRET=your-gmail-client-secret

# Application Settings
DEBUG=true
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:3000,http://localhost:19006

# External Services
SEARCH_API_KEY=your-search-api-key  # For research agent
MAPS_API_KEY=your-maps-api-key      # For location-based suggestions
